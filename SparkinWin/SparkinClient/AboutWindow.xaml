<controls:MicaWindow x:Class="SparkinClient.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SparkinClient"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
        Title="关于…" Height="320" Width="260" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontFamily="Microsoft YaHei UI">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3.2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image HorizontalAlignment="Left" Height="64" Width="64" Margin="10,10,0,0" VerticalAlignment="Top"  Source="/Images/main.png"/>
            <Label Content="Sparkin指纹设置程序" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
            <Label x:Name="lbVersion" Content="版本：V1.2" HorizontalAlignment="Left" Margin="80,42,0,0" VerticalAlignment="Top" FontSize="14"/>
        </Grid>

        <Label Grid.Row="1" Content="MYNOVA ©版权所有" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Label Grid.Row="2" VerticalAlignment="Top" HorizontalContentAlignment="Center">
            <TextBlock>
        <Hyperlink NavigateUri="https://space.bilibili.com/1533207" RequestNavigate="Hyperlink_RequestNavigate">
            https://space.bilibili.com/1533207
        </Hyperlink>
            </TextBlock>
        </Label>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Width="100" Height="100" Source="/Images/barcode_bilibili.png" Stretch="Fill"/>
            <Image Grid.Column="1"  Width="100" Height="100" Source="/Images/barcode_github.png" Stretch="Fill"/>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="B站主页" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
            <Label Grid.Column="1" Content="Github主页"  VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        </Grid>
    </Grid>
</controls:MicaWindow>
