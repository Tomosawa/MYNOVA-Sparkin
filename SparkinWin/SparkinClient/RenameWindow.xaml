<controls:MicaWindow x:Class="SparkinClient.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SparkinClient"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
        Title="重命名" Height="250" Width="200" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" FontFamily="Microsoft YaHei UI" WindowStyle="SingleBorderWindow" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/Images/finger.png"  Width="80" />
        <TextBlock Grid.Row="1" Text="请输入指纹的名称" HorizontalAlignment="Center"/>
        <controls:TextBox Grid.Row="2" x:Name="txtFingerName" Height="30"  MaxLength="10" Margin="15,0,15,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <controls:Button  x:Name="btnOK" VerticalAlignment="Top" Content="保存" Width="80" Height="30" Margin="0,0,5,0" IsDefault="True" Click="btnOK_Click"/>
            <controls:Button  x:Name="btnCancel" VerticalAlignment="Top" Content="取消" Width="80" Height="30" Margin="5,0,0,0" Click="btnCancel_Click"/>
        </StackPanel>
      
    </Grid>
</controls:MicaWindow>
