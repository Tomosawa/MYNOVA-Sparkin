<controls:MicaWindow x:Class="SparkinClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SparkinClient"
        mc:Ignorable="d"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
        Title="注册指纹" Height="300" Width="240" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" FontFamily="Microsoft YaHei UI">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image x:Name="imgCtrl"  Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" gif:AnimationBehavior.SourceUri="/Images/scanfinger.gif" gif:AnimationBehavior.RepeatBehavior="Forever"/>
        <TextBlock Grid.Row="1" x:Name="txtStep" Text="0/5" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <ProgressBar x:Name="pbarStep"  Grid.Row="2" Maximum="5" Width="200" />
        <TextBlock Grid.Row="3" x:Name="txtStatus" Text="开始第一次指纹录入，请将手指放在指纹传感器上，保持稳定几秒即可。" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
        
        <!--<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">-->
        <controls:Button x:Name="btnCancel" Grid.Row="4" Content="取消" Width="200"  Height="35"  HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnCancel_Click"/>
        <controls:Button x:Name="btnConfirm" Grid.Row="4" Content="确认" Width="200" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center"  Click="BtnConfirm_Click" Visibility="Collapsed" />
        <!--</StackPanel>-->
    </Grid>
</controls:MicaWindow>
