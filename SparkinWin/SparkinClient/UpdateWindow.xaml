<controls:MicaWindow x:Class="SparkinClient.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SparkinClient"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
        Title="下载更新" Height="100" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" FontFamily="Microsoft YaHei UI" WindowStyle="None" ContentRendered="MicaWindow_ContentRendered" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="下载更新中…" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.13*"/>
            </Grid.ColumnDefinitions>
            <ProgressBar Grid.Column="0" x:Name="progressBar" Value="0" Margin="10,0,0,0"/>
            <TextBlock Grid.Column="1" Text="100%" x:Name="progressText" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</controls:MicaWindow>
